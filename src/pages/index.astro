---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Arnold Restrepo - Music Session">
	<main>
		<div>
			<h1>Arnold Restrepo</h1>
			<h3>"Guitarrista y Músico de Sesión"</h3>
		</div>
		<div class="embed-container">
			<iframe src="https://www.youtube.com/embed/QnMg_8Fifbs?si=ebXiHISRKYSwZS3q" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe>
		</div>
	</main>
</Layout>

<style>
	main {
		margin: 0 auto;
		padding: 0;
		width: 800px;
		max-width: calc(100% - 1rem);
		min-width: auto;
		color: white;
		font-size: 20px;
		line-height: 1.6;
		display: grid;
    place-content: center;	
	}

	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}

	h3 {
		font-size: 2rem;
		font-weight: 400;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}

	.embed-container {
    position: relative;
    padding-bottom: 56.25%;
    height: 0;
    overflow: hidden;
	}
	
	.embed-container iframe {
    position: absolute;
    top:0;
    left: 0;
    width: 100%;
    height: 100%;
	}

	@media screen and (max-width: 600px) {
		main {
			width: 100%;
		}
		h1 {
			font-size: 2.5rem;
		}
		h3 {
			font-size: 1.5rem;
		}
		
	}
</style>
